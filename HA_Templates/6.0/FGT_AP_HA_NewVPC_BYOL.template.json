							},
							"',",
							"'HApeer':'",
							{
								"Fn::Select": ["0", {
									"Fn::Split": ["/", {
										"Ref": "FortiGate1HAsyncIP"
									}]
								}]
							},
							"',",
							"'HApriority':'1',",
							"'Hostname':'Fgt2'",
							"}"
						]
					]
				}
			}
		},
		"S3Endpoint": {
			"Type": "AWS::EC2::VPCEndpoint",
			"Properties": {
				"PolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [{
						"Effect": "Allow",
						"Principal": "*",
